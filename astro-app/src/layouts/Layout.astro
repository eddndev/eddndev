---
import '../styles/global.css';
import SvgSprite from '../components/SvgSprite.astro';
import { ClientRouter } from 'astro:transitions';
import Sidebar from '../components/layout/Sidebar.astro';
import TopBar from '../components/layout/TopBar.astro';
import NavigationPanel from '../components/layout/NavigationPanel.astro';

interface Props {
	title?: string;
    description?: string;
    project?: { title: string };
}

const { title = "edd n' dev", description = "Oferta especial de lanzamiento.", project } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <ClientRouter />
	</head>
	<body class="bg-black text-white antialiased overflow-x-hidden">
        <div id="custom-cursor" class="hidden lg:flex fixed top-0 left-0 z-[9999] pointer-events-none w-4 h-4 rounded-full bg-white mix-blend-difference items-center justify-center transform -translate-x-1/2 -translate-y-1/2 will-change-[width,height,transform]">
            <span id="cursor-label" class="text-xs font-black text-white opacity-0 tracking-widest font-mono uppercase whitespace-nowrap"></span>
        </div>

        <SvgSprite />
        
        <div class="min-h-screen bg-black">
            
            <!-- 1. FIXED STRUCTURE -->
            <Sidebar />
            
            <!-- 2. NAVIGATION GRID (Overlay in Content Area) -->
            <!-- Positioned by CSS to fit exactly in the content hole -->
            <NavigationPanel />

            <!-- 3. PAGE CONTENT -->
            <div 
                id="page-content"
                class="flex flex-col min-w-0 pt-16 lg:pt-0 lg:pl-20 2xl:pl-24 relative z-10 bg-black"
            >
                <TopBar project={project} />
                
                <main class="flex-1 relative z-10">
                    <slot />
                </main>
            </div>
        </div>
        
        <script src="../scripts/main.js"></script>

        <!-- MENU TOGGLE SCRIPT -->
        <script>
            import { gsap } from 'gsap';

            document.addEventListener('astro:page-load', () => {
                const trigger = document.getElementById('sidebar-menu-btn');
                const navPanel = document.getElementById('nav-panel');
                const pageContent = document.getElementById('page-content');
                const navCards = document.querySelectorAll('.nav-card');

                let isOpen = false;

                function toggleMenu() {
                    if (!navPanel) return;
                    
                    isOpen = !isOpen;

                    if (isOpen) {
                        // Reveal Panel
                        navPanel.classList.remove('opacity-0', 'pointer-events-none', 'scale-[0.98]');
                        document.body.style.overflow = 'hidden';

                        // Dim Content
                        if (pageContent) {
                            gsap.to(pageContent, { opacity: 0.1, duration: 0.5, ease: "power2.out" });
                            pageContent.style.pointerEvents = 'none'; // Prevent clicks on content
                        }

                        // Animate Grid Items (Stagger)
                        gsap.fromTo(navCards, 
                            { y: 20, opacity: 0 },
                            { y: 0, opacity: 1, duration: 0.4, stagger: 0.05, delay: 0.1, ease: "power2.out" }
                        );

                    } else {
                        // Hide Panel
                        navPanel.classList.add('opacity-0', 'pointer-events-none', 'scale-[0.98]');
                        document.body.style.overflow = '';

                        // Restore Content
                        if (pageContent) {
                            gsap.to(pageContent, { opacity: 1, duration: 0.5, ease: "power2.out" });
                            pageContent.style.pointerEvents = 'auto';
                        }
                    }
                }

                if(trigger) trigger.addEventListener('click', toggleMenu);
                
                // Close on link click
                navCards.forEach(link => {
                    link.addEventListener('click', () => {
                        if(isOpen) toggleMenu();
                    });
                });
            });
        </script>
	</body>
</html>
