---
interface Props {
  items: { value: string; label: string }[];
}
const { items } = Astro.props;
---
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 my-10 border-y border-white/10 py-8">
  {items.map(item => (
    <div class="text-center">
      <div class="text-2xl font-bold text-white">{item.value}</div>
      <div class="text-xs font-mono text-gray-500 uppercase tracking-widest mt-1">{item.label}</div>
    </div>
  ))}
</div>
