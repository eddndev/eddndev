---
interface Props {
  heading?: string;
  body: string;
}
const { heading, body } = Astro.props;
---
<div class="prose prose-invert max-w-none">
    {heading && <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6 tracking-tight">{heading}</h2>}
    <div class="text-lg text-gray-400 leading-relaxed space-y-6 whitespace-pre-line">
        {body}
    </div>
</div>