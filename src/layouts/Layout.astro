---
import '../styles/global.css';
import SvgSprite from '../components/SvgSprite.astro';
import { ClientRouter } from 'astro:transitions';
import TopBar from '../components/layout/TopBar.astro';
import NavigationPanel from '../components/layout/NavigationPanel.astro';

interface Props {
	title?: string;
    description?: string;
    image?: string | ImageMetadata;
    project?: { title: string };
}

const { 
    title = "edd n' dev", 
    description = "Oferta especial de lanzamiento.", 
    image = "/og-image.png",
    project 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Resolve image URL
let socialImageURL = "";
if (typeof image === 'string') {
    socialImageURL = new URL(image, Astro.site).href;
} else if (image && typeof image === 'object' && 'src' in image) {
    // Handle ImageMetadata (from Content Collections or imports)
    // Note: Ideally use getImage() for optimized resizing, but .src works for raw asset path in build
    socialImageURL = new URL(image.src, Astro.site).href;
}
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        
        <!-- SEO / Metadata -->
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />
        <meta name="generator" content={Astro.generator} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={socialImageURL} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={socialImageURL} />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
		
        <ClientRouter />
	</head>
	<body class="bg-black text-white antialiased overflow-x-hidden">
        <div id="custom-cursor" class="hidden lg:flex fixed top-0 left-0 z-[9999] pointer-events-none w-4 h-4 rounded-full bg-white mix-blend-difference items-center justify-center transform -translate-x-1/2 -translate-y-1/2 will-change-[width,height,transform]">
            <span id="cursor-label" class="text-xs font-black text-white opacity-0 tracking-widest font-mono uppercase whitespace-nowrap"></span>
        </div>

        <SvgSprite />
        
        <div class="min-h-screen bg-black">
            
            <!-- 1. INFRASTRUCTURE (Always Visible / Fixed) -->
            <TopBar project={project} />
            
            <!-- 2. NAVIGATION GRID (Overlay under Header, right of Sidebar) -->
            <NavigationPanel />

            <!-- 3. PAGE CONTENT (Scrollable area) -->
            <!-- Top padding creates space for the fixed TopBar -->
            <!-- Left padding creates space for the fixed Sidebar -->
            <div 
                id="page-content"
                class="flex flex-col min-w-0 relative z-10 bg-black transition-opacity duration-500"
            >
                <main class="flex-1 relative z-10">
                    <slot />
                </main>
            </div>
        </div>
        
        <script src="../scripts/main.js"></script>

        <!-- MENU TOGGLE SCRIPT -->
        <script>
            import { gsap } from 'gsap';

            document.addEventListener('astro:page-load', () => {
                const trigger = document.getElementById('sidebar-menu-btn');
                const navPanel = document.getElementById('nav-panel');
                const pageContent = document.getElementById('page-content');
                const navCards = document.querySelectorAll('.nav-card');

                let isOpen = false;

                function toggleMenu() {
                    if (!navPanel) return;
                    
                    isOpen = !isOpen;

                    if (isOpen) {
                        // 1. Lock Scroll (Class based)
                        document.documentElement.classList.add('no-scroll');
                        document.body.classList.add('no-scroll');

                        // 2. Reveal Nav Panel
                        navPanel.classList.remove('opacity-0', 'pointer-events-none', 'scale-[0.98]');

                        // 3. Hide Content (Opacity 0)
                        if (pageContent) {
                            gsap.to(pageContent, { opacity: 0, duration: 0.5, ease: "power2.out" });
                            pageContent.style.pointerEvents = 'none';
                        }

                        // 4. Animate Grid Items
                        gsap.fromTo(navCards, 
                            { y: 20, opacity: 0 },
                            { y: 0, opacity: 1, duration: 0.4, stagger: 0.05, delay: 0.1, ease: "power2.out" }
                        );

                    } else {
                        // 1. Unlock Scroll
                        document.documentElement.classList.remove('no-scroll');
                        document.body.classList.remove('no-scroll');

                        // 2. Hide Nav Panel
                        navPanel.classList.add('opacity-0', 'pointer-events-none', 'scale-[0.98]');

                        // 3. Restore Content
                        if (pageContent) {
                            gsap.to(pageContent, { opacity: 1, duration: 0.5, ease: "power2.out" });
                            pageContent.style.pointerEvents = 'auto';
                        }
                    }
                }

                if(trigger) trigger.addEventListener('click', toggleMenu);
                
                // Close on link click
                navCards.forEach(link => {
                    link.addEventListener('click', () => {
                        if(isOpen) toggleMenu();
                    });
                });
            });
        </script>
	</body>
</html>