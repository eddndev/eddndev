---
interface Props {
  heading?: string;
  body: string;
  section?: string;
  number?: string;
}
const { heading, body, section, number } = Astro.props;
---
<div class="space-y-8" data-case-block>
    {/* Optional label: [ 01 · CONTEXT ] */}
    {section && (
        <div class="reveal-text">
            <span class="font-mono text-xs tracking-widest uppercase text-[var(--project-color)]">
                [ {number ? `${number} · ` : ''}{section} ]
            </span>
        </div>
    )}

    {heading && (
        <div class="space-y-6">
            <h2 class="text-4xl lg:text-5xl xl:text-6xl font-black text-white tracking-tighter leading-[0.9] reveal-text">
                {heading}
            </h2>
            <div class="h-px bg-white/10 reveal-text"></div>
        </div>
    )}

    <div class="text-lg text-gray-300 font-light leading-relaxed whitespace-pre-line reveal-text">
        {body}
    </div>
</div>
