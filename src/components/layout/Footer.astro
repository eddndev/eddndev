---
import { services } from '../../data/services';

const currentYear = new Date().getFullYear();

const taglines: Record<string, string> = {
  'software-a-medida': 'Sistemas / Plataformas / APIs',
  'sitios-web': 'Diseño / Performance / SEO',
  'e-commerce': 'Checkout / Pagos / Inventario',
  'agentes-de-automatizacion': 'IA / Flujos / Monitoreo',
};
---

<footer id="site-footer" class="bg-[#0a0a0a] text-white min-h-[100dvh] flex flex-col justify-center border-t border-white/10 overflow-hidden relative z-20">
    <div class="mx-auto max-w-[1800px] px-6 sm:px-12 w-full py-24 lg:py-32">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-20">

            <!-- Services List (Menu Style) -->
            <div class="space-y-12">
                <h2 class="text-xs 2xl:text-sm font-mono text-purple-400 tracking-widest mb-8 reveal-footer">[ SERVICIOS ]</h2>

                <ul class="space-y-8">
                    {services.map((service) => (
                        <li class="reveal-footer">
                            <a href={`/services#${service.id}`} class="group flex items-baseline justify-between border-b border-white/10 pb-4 hover:border-purple-500 transition-colors cursor-none" data-cursor-text="VER MÁS">
                                <span class="text-2xl sm:text-3xl md:text-4xl lg:text-3xl 2xl:text-4xl font-bold text-gray-300 group-hover:text-white transition-colors">{service.title}</span>
                                <span class="text-sm sm:text-base md:text-lg lg:text-sm 2xl:text-base font-mono text-gray-600 group-hover:text-purple-400 transition-colors">{taglines[service.id]}</span>
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- CTA / Contact -->
            <div class="flex flex-col justify-between h-full">
                 <div>
                    <h3 class="text-5xl sm:text-6xl md:text-7xl lg:text-7xl 2xl:text-8xl font-black tracking-tighter leading-[0.9] mb-8 reveal-footer">
                        LET'S <br> <span class="text-purple-500">BUILD.</span>
                    </h3>
                    <p class="text-gray-400 text-lg sm:text-xl md:text-2xl lg:text-lg 2xl:text-xl max-w-md 2xl:max-w-xl mb-12 reveal-footer">
                        ¿Tienes un proyecto ambicioso? Buscamos colaborar con marcas que valoran la excelencia técnica y visual.
                    </p>
                 </div>

                 <div class="flex flex-col sm:flex-row gap-6 reveal-footer">
                    <!-- Primary CTA (Hero Style) -->
                    <a href="/contact" class="group relative inline-flex items-center justify-center px-8 py-4 2xl:px-10 2xl:py-5 2xl:text-xl bg-white text-black font-bold rounded-full overflow-hidden transition-transform hover:scale-105">
                        <span class="relative z-10 group-hover:text-purple-700 transition-colors">Iniciar Conversación</span>
                    </a>
                    
                    <!-- Secondary CTA (Consistent Physics) -->
                    <a href="/contact" class="group inline-flex items-center justify-center px-8 py-4 2xl:px-10 2xl:py-5 2xl:text-xl border border-white/20 text-white font-medium rounded-full transition-all hover:scale-105 hover:bg-white/5 hover:border-white/40">
                        Ir a Contacto
                    </a>
                 </div>
            </div>

        </div>

        <!-- Minimal Footer Info -->
        <div class="mt-24 pt-8 border-t border-white/5 flex flex-col sm:flex-row justify-between items-center text-xs text-gray-600 font-mono reveal-footer">
            <span>&copy; 2020 - {currentYear} EDDNDEV STUDIO. ALL RIGHTS RESERVED.</span>
            <div class="flex gap-4 mt-4 sm:mt-0">
                <a href="https://github.com/achronyme" target="_blank" class="hover:text-white transition-colors">ACHRONYME</a>
                <a href="https://github.com/eddndev" target="_blank" class="hover:text-white transition-colors">GITHUB</a>
                <a href="https://linkedin.com/in/eddndev" target="_blank" class="hover:text-white transition-colors">LINKEDIN</a>
                <a href="https://instagram.com/_eddndev" target="_blank" class="hover:text-white transition-colors">INSTAGRAM</a>
            </div>
        </div>
    </div>
</footer>
