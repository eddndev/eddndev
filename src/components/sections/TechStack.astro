---
const stack = [
    "ASTRO", "REACT", "NODE.JS", "PYTHON", "RUST", "AWS", "DOCKER", "GSAP", "TAILWINDCSS", "POSTGRESQL", "MONGODB", "TYPESCRIPT"
];
// Duplicate for infinite scroll
const marqueeItems = [...stack, ...stack, ...stack];
---
<section class="py-8 sm:py-12 border-b border-white/10 bg-[#020202] overflow-hidden relative flex items-center">
    <div class="absolute inset-0 bg-gradient-to-r from-[#020202] via-transparent to-[#020202] z-10 pointer-events-none w-full"></div>
    <div class="flex whitespace-nowrap gap-12 sm:gap-24 items-center w-max animate-marquee">
        {marqueeItems.map((tech) => (
            <span class="font-mono text-xl sm:text-2xl md:text-3xl font-black text-white/10 hover:text-white/30 transition-colors uppercase tracking-widest select-none cursor-default">{tech}</span>
        ))}
    </div>
</section>

<style>
@keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-33.3333%); } /* Since we tripled the array */
}
.animate-marquee {
    animation: marquee 20s linear infinite;
    will-change: transform;
}
</style>