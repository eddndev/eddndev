---
import { services } from '../../data/services';

const colorMap: Record<string, { dot: string; text: string; num: string; glow: string; gradient: string }> = {
  purple: {
    dot: 'bg-purple-500',
    text: 'group-hover:text-purple-300',
    num: 'text-purple-400',
    glow: 'group-hover:shadow-[0_0_12px_#a855f7]',
    gradient: 'from-purple-500/0 via-purple-500/50 to-purple-500/0',
  },
  green: {
    dot: 'bg-green-500',
    text: 'group-hover:text-green-300',
    num: 'text-green-400',
    glow: 'group-hover:shadow-[0_0_12px_#22c55e]',
    gradient: 'from-green-500/0 via-green-500/50 to-green-500/0',
  },
  orange: {
    dot: 'bg-orange-500',
    text: 'group-hover:text-orange-300',
    num: 'text-orange-400',
    glow: 'group-hover:shadow-[0_0_12px_#f97316]',
    gradient: 'from-orange-500/0 via-orange-500/50 to-orange-500/0',
  },
  blue: {
    dot: 'bg-blue-500',
    text: 'group-hover:text-blue-300',
    num: 'text-blue-400',
    glow: 'group-hover:shadow-[0_0_12px_#3b82f6]',
    gradient: 'from-blue-500/0 via-blue-500/50 to-blue-500/0',
  },
};
---

<section id="services" class="bg-[#050505] text-white border-t border-white/10 relative overflow-hidden">
    <div class="mx-auto max-w-[1800px] relative z-10">

        <!-- Header -->
        <div class="px-6 sm:px-12 py-24 lg:pt-32 lg:pb-20">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
                <div class="lg:col-span-5">
                    <div class="text-xs 2xl:text-sm font-mono text-purple-400 tracking-widest mb-4 reveal-text">
                        [ 02 · SERVICIOS ]
                    </div>
                    <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-6xl 2xl:text-7xl font-black tracking-tighter leading-[0.9] reveal-text">
                        LO QUE <br> <span class="text-purple-400">HACEMOS.</span>
                    </h2>
                </div>
                <div class="lg:col-span-7 flex flex-col justify-end pl-0 lg:pl-12">
                    <p class="text-lg sm:text-xl md:text-2xl lg:text-xl 2xl:text-2xl text-gray-300 font-light leading-relaxed max-w-2xl reveal-text">
                        Cuatro disciplinas. Un mismo estándar: que lo que construyamos
                        <span class="text-white font-medium">resuelva un problema real</span> de tu negocio.
                    </p>
                </div>
            </div>
        </div>

        <!-- Card Grid -->
        <div class="px-6 sm:px-12 pb-24 lg:pb-32">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-px bg-white/10">
                {services.map((service) => {
                    const c = colorMap[service.color];
                    return (
                        <a
                            href={`/services#${service.id}`}
                            class="bg-[#050505] p-8 sm:p-12 group hover:bg-[#0a0a0a] transition-colors relative overflow-hidden block"
                            data-service-card
                        >
                            <div class={`absolute top-0 left-0 w-full h-px bg-gradient-to-r ${c.gradient} scale-x-0 group-hover:scale-x-100 transition-transform duration-500`}></div>
                            <div class="flex items-center gap-3 mb-6">
                                <span class={`w-2 h-2 ${c.dot} rounded-full ${c.glow} transition-shadow`}></span>
                                <span class={`font-mono text-xs ${c.num} tracking-widest uppercase`}>{service.number}</span>
                            </div>
                            <h3 class={`text-2xl sm:text-3xl 2xl:text-4xl font-bold mb-4 ${c.text} transition-colors`}>{service.title}</h3>
                            <p class="text-gray-400 font-light leading-relaxed 2xl:text-lg">{service.tagline}</p>
                        </a>
                    );
                })}
            </div>

            <!-- CTA -->
            <div class="mt-16 flex justify-center reveal-text">
                <a href="/services" data-cursor-text="VER TODO" class="group flex items-center gap-3 text-white font-medium 2xl:text-lg hover:text-purple-300 transition-colors">
                    <span>Ver todos los servicios</span>
                    <svg class="w-4 h-4 2xl:w-5 2xl:h-5 transition-transform group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M13 5l7 7-7 7"/></svg>
                </a>
            </div>
        </div>

    </div>
</section>
