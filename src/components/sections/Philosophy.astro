---
const points = [
    { num: '01', title: 'Infraestructura Propia', desc: 'No dependemos de plataformas que te controlan. Administramos servidores y seguridad para que tú solo operes tu negocio.', color: 'purple' },
    { num: '02', title: 'Velocidad Extrema', desc: 'Sistemas que responden en milisegundos. Menos tiempo de carga significa más retención de usuarios y menos gasto en recursos.', color: 'orange' },
    { num: '03', title: 'Automatización Real', desc: 'Construimos flujos con inteligencia artificial que trabajan sin que tengas que pensar en ellos. Horas ahorradas cada semana.', color: 'green' },
    { num: '04', title: 'Sistemas a Medida', desc: 'No hacemos "plantillas web". Construimos la lógica completa de tu operación para que funcione con la seriedad que exiges.', color: 'blue' }
];

const colorMap: Record<string, { dot: string; text: string; num: string; glow: string; gradient: string }> = {
  purple: {
    dot: 'bg-purple-500', text: 'group-hover:text-purple-300', num: 'text-purple-400',
    glow: 'group-hover:shadow-[0_0_12px_#a855f7]', gradient: 'from-purple-500/0 via-purple-500/50 to-purple-500/0',
  },
  green: {
    dot: 'bg-green-500', text: 'group-hover:text-green-300', num: 'text-green-400',
    glow: 'group-hover:shadow-[0_0_12px_#22c55e]', gradient: 'from-green-500/0 via-green-500/50 to-green-500/0',
  },
  orange: {
    dot: 'bg-orange-500', text: 'group-hover:text-orange-300', num: 'text-orange-400',
    glow: 'group-hover:shadow-[0_0_12px_#f97316]', gradient: 'from-orange-500/0 via-orange-500/50 to-orange-500/0',
  },
  blue: {
    dot: 'bg-blue-500', text: 'group-hover:text-blue-300', num: 'text-blue-400',
    glow: 'group-hover:shadow-[0_0_12px_#3b82f6]', gradient: 'from-blue-500/0 via-blue-500/50 to-blue-500/0',
  },
};
---
<section id="philosophy" class="bg-[#050505] text-white border-t border-white/10 relative overflow-hidden py-24 lg:py-32">
    <!-- Gradient Orb -->
    <div data-profile-orb class="absolute top-[30%] left-[50%] -translate-x-1/2 w-[600px] h-[600px] rounded-full bg-purple-900/10 blur-[150px] pointer-events-none z-0"></div>

    <div class="mx-auto max-w-[1800px] px-6 sm:px-12 relative z-10">
        <div class="mb-16 lg:mb-20">
            <div class="text-xs 2xl:text-sm font-mono text-purple-400 tracking-widest mb-6 reveal-text">
                [ 01 · FILOSOFÍA ]
            </div>
            <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-6xl 2xl:text-7xl font-black tracking-tighter leading-[0.9] reveal-text">
                NUESTRO <br> <span class="text-purple-400">ADN.</span>
            </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-px bg-white/10">
            {points.map(point => {
                const c = colorMap[point.color];
                return (
                <div class="bg-[#050505] p-8 sm:p-12 group hover:bg-[#0a0a0a] transition-colors relative overflow-hidden">
                    <div class={`absolute top-0 left-0 w-full h-px bg-gradient-to-r ${c.gradient} scale-x-0 group-hover:scale-x-100 transition-transform duration-500`}></div>
                    <div class="flex items-center gap-3 mb-6">
                        <span class={`w-2 h-2 rounded-full ${c.dot} ${c.glow} transition-shadow`}></span>
                        <span class={`font-mono text-xs ${c.num} tracking-widest uppercase`}>{point.num}</span>
                    </div>
                    <h3 class={`text-2xl sm:text-3xl 2xl:text-4xl font-bold mb-4 ${c.text} transition-colors`}>{point.title}</h3>
                    <p class="text-gray-400 font-light leading-relaxed 2xl:text-lg">{point.desc}</p>
                </div>
            )})}
        </div>

        <div class="mt-16 flex justify-center reveal-text">
            <a href="/profile" data-cursor-text="PERFIL" class="group flex items-center gap-3 text-white font-medium 2xl:text-lg hover:text-purple-300 transition-colors">
                <span>Conocer más sobre nosotros</span>
                <svg class="w-4 h-4 2xl:w-5 2xl:h-5 transition-transform group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M13 5l7 7-7 7"/></svg>
            </a>
        </div>
    </div>
</section>
